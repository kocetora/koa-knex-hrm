{
  "name": "koa-knex-hrm",
  "version": "1.1.0",
  "description": "HRM backend using koa and knex",
  "main": "app.js",
  "scripts": {
    "start": "nodemon app.js",
    "lint": "eslint --fix *.js && eslint --fix **/*.js && eslint --fix **/**/*.js",
    "prettier": "prettier --write .",
    "style": "npm run prettier && npm run lint",
    "test": "jest --watchAll=false --collect-coverage --runInBand --forceExit --detectOpenHandles",
    "prof": "node --prof app.js"
  },
  "dependencies": {
    "@koa/cors": "^3.1.0",
    "argon2": "^0.27.1",
    "bcrypt-nodejs": "0.0.3",
    "convert-csv-to-array": "^1.0.3",
    "csvtojson": "^2.0.10",
    "fs": "0.0.1-security",
    "jest-stare": "^2.2.2",
    "jsonexport": "^3.2.0",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.21.13",
    "koa": "^2.13.0",
    "koa-bodyparser": "^4.3.0",
    "koa-passport": "^4.1.3",
    "koa-router": "^9.4.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^8.6.0",
    "validator": "^13.1.1",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "chai-match-pattern": "^1.2.0",
    "jest": "^26.6.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@stryker-mutator/core": "^4.1.0",
    "@stryker-mutator/mocha-runner": "^4.1.0",
    "eslint": "^7.7.0",
    "husky": "^4.3.0",
    "nodemon": "^2.0.4",
    "nyc": "^15.1.0",
    "prettier": "2.1.2",
    "stryker": "^0.35.1",
    "stryker-api": "^0.24.1",
    "stryker-html-reporter": "^0.18.1",
    "stryker-javascript-mutator": "^0.14.1",
    "stryker-mocha-framework": "^0.15.1",
    "stryker-mocha-runner": "^0.17.1"
  },
  "author": "kocetora",
  "license": "ISC",
  "jest": {
    "verbose": true,
    "reporters": [
      "default",
      [
        "jest-stare",
        {
          "resultDir": "jest-stare",
          "reportTitle": "jest-stare!",
          "additionalResultsProcessors": [
            "jest-junit"
          ],
          "coverageLink": "../coverage/lcov-report/index.html",
          "jestStareConfigJson": "jest-stare.json",
          "jestGlobalConfigJson": "globalStuff.json"
        }
      ]
    ]
  }
}
